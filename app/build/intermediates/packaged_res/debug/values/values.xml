<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <attr format="color" name="bgColor"/>
    <attr format="color" name="digitColor"/>
    <attr format="color" name="digitTransparencyColor"/>
    <attr format="color" name="neutralColor"/>
    <attr format="color" name="resultColor"/>
    <attr format="reference" name="themeSwitcher"/>
    <attr format="color" name="visualInputColor"/>
    <color name="black">#000000</color>
    <color name="dark_gray">#202020</color>
    <color name="dark_silver">#555050</color>
    <color name="light_silver">#9C9C9C</color>
    <color name="orange">#FF6E22</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6E22</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="silver">#7A7979</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="theme_switcher_dark_background">#FFFFFF</color>
    <color name="theme_switcher_ddark_background">#FFFFFF</color>
    <color name="translucent_black">#73000000</color>
    <color name="transparency_black">#33000000</color>
    <color name="transparency_orange">#33FF6E22</color>
    <color name="transparency_silver">#807A7979</color>
    <color name="white">#FFF</color>
    <string name="app_name">Calculator</string>
    <string name="switch_theme">Change Theme</string>
    <string name="textNotificationAboutClipboard">The result is copied to the clipboard</string>
    <style name="CalculatorButton" parent="Widget.AppCompat.Button">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="CalculatorButtonBig" parent="CalculatorButton">
        <item name="android:textSize">65sp</item>
    </style>
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="bgColor">@color/black</item>
        <item name="digitColor">@color/white</item>
        <item name="digitTransparencyColor">@color/transparency_silver</item>
        <item name="visualInputColor">@color/white</item>
        <item name="resultColor">@color/light_silver</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="themeSwitcher">@drawable/theme_switcher_light</item>
        <item name="neutralColor">@color/black</item>
    </style>
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="bgColor">@color/white</item>
        <item name="digitColor">@color/black</item>
        <item name="digitTransparencyColor">@color/transparency_black</item>
        <item name="visualInputColor">@color/black</item>
        <item name="resultColor">@color/dark_silver</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="themeSwitcher">@drawable/theme_switcher_dark</item>
        <item name="neutralColor">@color/white</item>
    </style>
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimaryVariant</item>
        
    </style>
</resources>